<dxc:DXWindow x:Class="DXSample.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
        Title="Filter Editor" Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="CanResizeWithGrip">
    <Grid x:Name="Grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition MaxHeight="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Button Content="OK" Margin="5,5,5,5" Click="OnOkClick" Background="LightSkyBlue"/>
            <Button Content="CustomAction" Margin="5,5,5,5" Click="OnCustomActionClick" Background="LightSkyBlue"/>
            <Button Content="Cancel" Margin="5,5,5,5" Click="OnCancelClick" Background="LightSkyBlue"/>
        </StackPanel>
    </Grid>
</dxc:DXWindow>
